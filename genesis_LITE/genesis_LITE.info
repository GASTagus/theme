  ; $Id$


  ; Change the name to match your new subthemes name. Modify the optional description.
		
name         = Genesis LITE
description  = My Kickn' LITE Sub-theme


  ; Genesis subtheme mini-stylesheets, unset what you don't need or want.

  ; XHTML elements.
stylesheets[all][] = css/type.css
stylesheets[all][] = css/lists.css
stylesheets[all][] = css/forms.css
stylesheets[all][] = css/tables.css

  ; Node, block, comment and page elements.
stylesheets[all][] = css/nodes.css
stylesheets[all][] = css/blocks.css
stylesheets[all][] = css/comments.css
stylesheets[all][] = css/page.css
  
  
  ; To work around IE7's 30 max stylesheets issue:
  ; 1. Unset by the mini-stylesheets (add semicolons).
  ; 2. Uncomment the following:
;stylesheets[all][] = css/_all-lite.css
  ; Optionally use the compressed and tidy version.
;stylesheets[all][] = css/_all-lite-tidy.css

  ; Do not change core, engine, screenshot or base theme - these are required defaults.
core         = 7.x
engine       = phptemplate
screenshot   = images/screenshot_lite.png
base theme   = genesis


  ; Regions.
  ; You can define new regions here.
  ; The default Genesis regions are included by default.
regions[leaderboard]        = Leaderboard
regions[header]             = Header Blocks
regions[secondary_content]  = Secondary Content
regions[content_top]        = Content top
regions[content]            = Main Content
regions[content_bottom]     = Content bottom
regions[tertiary_content]   = Tertiary Content
regions[left]               = Sidebar Left
regions[right]              = Sidebar Right
regions[footer]             = Footer


  ; Features.
  ; The "features" control which of these check boxes display on the
  ; admin/build/themes configuration page. This is useful for 
  ; suppressing check boxes for elements not used by your theme.

features[] = logo
features[] = name
features[] = slogan
features[] = mission
features[] = node_user_picture
features[] = comment_user_picture
features[] = search
features[] = favicon
features[] = primary_links
features[] = secondary_links



